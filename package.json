{
  "name": "prettyhtml-repo",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prettify": "prettier --write \"./**/*.js\"",
    "lint": "eslint .",
    "test": "npm run lint && npm run unit-tests",
    "unit-tests": "mocha --ui exports --reporter progress --timeout 20000 packages/**/test/*.test.js",
    "postinstall": "npm run bootstrap",
    "preversion": "npm test",
    "precommit": "npm run prettify && git add -u",
    "publish": "lerna exec 'npm publish'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StarpTech/prettyhtml.git"
  },
  "author": "Dustin Deus <deusdustin@gmail.com> (http://www.starptech.de)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/StarpTech/prettyhtml/issues"
  },
  "homepage": "https://github.com/StarpTech/prettyhtml#readme",
  "devDependencies": {
    "mocha": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-hemera": "0.0.6",
    "husky": "^0.14.3",
    "nyc": "^12.0.2",
    "prettier": "^1.13.5"
  }
}
